<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="right">

        <Button
            android:id="@+id/level_cancel"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/cancel" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="1dp"
            android:text="머리"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="2"
        android:orientation="vertical">
<!--
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="● 주증상"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
-->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#000000"></LinearLayout>

        <Button
            android:id="@+id/symptom_main_btn1"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@drawable/btn_select"
            android:text="열이 납니다."
            android:textColor="@drawable/white" />

        <Button
            android:id="@+id/symptom_main_btn2"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@drawable/btn_select"
            android:text="어지러움증이 있습니다."
            android:textColor="@drawable/white" />

        <Button
            android:id="@+id/symptom_main_btn3"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@drawable/btn_select"
            android:text="두통이 있습니다."
            android:textColor="@drawable/white" />

    </LinearLayout>
